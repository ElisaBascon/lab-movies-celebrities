<h2> New Celebrity</h2>

<form action="/celebrities/create" method="post">

    <label>Name</label>
    <input type="text" name="name" value="{{ name }}"/>

    <label>Ocupation</label>
    <input type="text" name="ocupation" value="{{ ocupation }}"/>

    <label>CatchPhrase</label>
    <input type="text" name="catchPhrase" value="{{ catchPhrase }}"/>

    <button type="submit">create Celebrity</button>

</form>